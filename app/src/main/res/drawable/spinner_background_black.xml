<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 灰黑色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF444444" />
            <stroke android:width="1dp" android:color="#FF666666" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- 使用PNG图片作为下拉箭头 -->
    <item
        android:drawable="@drawable/ic_arrow_drop_down_gray"
        android:gravity="end|center_vertical"
        android:right="8dp"
        android:width="24dp"
        android:height="24dp" />
        
    <padding android:left="8dp" android:top="8dp" android:right="32dp" android:bottom="8dp" />
</layer-list>
